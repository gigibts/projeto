@model RegistroViewModel
<table class="table">
    <tr>
        <td>
            <div class="row d-flex justify-content-center">
                <div class="col col-sm-8" style="min-height:50vh">
                    <h3 class="text-center">Registrar usu√°rio</h3>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <br>
                        <div class="form-group">
                            <label asp-for="UserName"> </label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <label asp-for="Nome"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <label asp-for="Cep"></label>
                            <input asp-for="Cep" id="cep" class="form-control" />
                            <span asp-validation-for="Cep" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <label asp-for="Endereco"></label>
                            <input asp-for="Endereco" id="rua" class="form-control" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <label asp-for="Numero"></label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <label asp-for="Bairro"></label>
                            <input asp-for="Bairro" id="bairro" class="form-control" />
                            <span asp-validation-for="Bairro" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <label asp-for="Cidade"></label>
                            <input asp-for="Cidade" readonly id="cidade" class="form-control" />
                            <span asp-validation-for="Cidade" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <label asp-for="Estado"></label>
                            <input asp-for="Estado" readonly id="estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <div class="col-md-8 mt-2">
                                <input type="submit" class="btn corlaranja" value="Registrar" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>