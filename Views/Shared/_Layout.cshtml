<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - projeto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projeto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light corlaranja border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/imagens/logo1.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                       <li>
                        @await Component.InvokeAsync("CategoriaMenu")
                       </li>
                       <li>
                        @await Component.InvokeAsync("CarrinhoResumo")
                       </li>
                        <li class="nav-item ms-auto">

                            <form class="navbar-form navbar-right" asp-controller="Item" asp-action="Search"
                                method="get">

                                <div class="form-group d-flex">
                                    <input type="text" class="form-control" placeholder="Procurar produto" name="searchString" value="@ViewData["searchString"]">
                                    <button class="corlaranja border-0"><i class="bi bi-search"></i>
                                </div>
                            
                            </form>
                        </li>
                        <li>
                            @await Html.PartialAsync("_Login")
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


   <footer class="corlaranja text-black py-2 mt-5">
        <div class="container">
    
            <div class="row">
    
                <div class="col-12 col-sm-3">
                    <h5> <i class="bi bi-person"></i> Endereço</h5>
                    <p>Rua das Flores, 10<br>Araçatuba</p>
                </div>
    
                <div class="col-12 col-sm-3">
                    <h5> <i class="bi bi-telephone"></i> Reservas</h5>
                    <p>Tel: 0000-0000 <br>Email: exemplo@example.com</p> 
                </div>
    
                <div class="col-12 col-sm-3">
                    <h5> <i class="bi bi-alarm"></i> Aberto</h5>
                    <p>Terça a Domingo: 19h - 00h<br>Segunda: Fechado</p>
                </div>
    
                <div class="col-12 col-sm-3">
                    <h5>Redes Sociais:</h5>
                    <i class="bi bi-whatsapp"></i>
                    <i class="bi bi-facebook"></i>
                    <i class="bi bi-instagram"></i>
                    <i class="bi bi-linkedin"></i>
                    <i class="bi bi-twitter"></i>
                    
                </div>
    
            </div>
    
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
