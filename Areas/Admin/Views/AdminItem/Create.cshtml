@model projeto.Models.Item

@{
    ViewData["Title"] = "Item";
}

<h3 class="text-center">Criar Item</h3>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col col-sm-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="DescricaoCurta" class="control-label"></label>
                <input asp-for="DescricaoCurta" class="form-control" />
                <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="DescricaoDetalhada" class="control-label"></label>
                <input asp-for="DescricaoDetalhada" class="form-control" />
                <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="ImagemUrl"></label>
                <input type="file" class="form-control" name="Imagem" id="Imagem">
            </div> 
            <div class="form-group mt-3">
                <label asp-for="ImagemPequenaUrl"></label>
                <input type="file" class="form-control" name="Imagemcurta" id="Imagemcurta">
            </div> 
        <div class="d-flex mt-3">    
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div> &nbsp;
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Destaque" /> @Html.DisplayNameFor(model => model.Destaque)
                </label>
            </div> 
        </div><br>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <br>
            <div class="d-flex">
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn corlaranja" /> |&nbsp;
                </div>
                <div>
                    <a class="btn corlaranja" asp-action="Index">Voltar</a>
                </div>
            </div>

        </form>
    </div>
</div>


