@model IEnumerable<projeto.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h3>Itens</h3>

<p>
    <a class="btn corlaranja link-dark" asp-action="Create">Criar novo Cadastro</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDetalhada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemPequenaUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destaque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoCurta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoDetalhada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ImagemPequenaUrl)" width="100px">
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ImagemPequenaUrl)" width="100px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destaque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaId)
            </td>
            <td>
                <div class="d-flex">
                    <a class="btn corlaranja" asp-action="Edit" asp-route-id="@item.ItemId">Editar</a>&nbsp;|&nbsp;
                    <a class="btn corlaranja" asp-action="Details" asp-route-id="@item.ItemId">Detalhar</a>&nbsp;|&nbsp;
                    <a class="btn corlaranja" asp-action="Delete" asp-route-id="@item.ItemId">Deletar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
