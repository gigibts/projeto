@model projeto.Models.Pedido

@{
    ViewData["Title"] = "Pedidos";
}

<h3 class="text-center">Criar novo Pedido</h3>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col col-sm-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Endereco1" class="control-label"></label>
                <input asp-for="Endereco1" class="form-control" />
                <span asp-validation-for="Endereco1" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Endereco2" class="control-label"></label>
                <input asp-for="Endereco2" class="form-control" />
                <span asp-validation-for="Endereco2" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="PedidoEnviado" class="control-label"></label>
                <input asp-for="PedidoEnviado" class="form-control" />
                <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="PedidoEnviadoEm" class="control-label"></label>
                <input asp-for="PedidoEnviadoEm" class="form-control" />
                <span asp-validation-for="PedidoEnviadoEm" class="text-danger"></span>
            </div>
            <div class="d-flex mt-3">
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn corlaranja" /> |&nbsp;
                </div>
                <div>
                    <a class="btn corlaranja" asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>