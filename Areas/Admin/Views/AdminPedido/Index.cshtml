@model ReflectionIT.Mvc.Paging.PagingList<projeto.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h3>Pedidos</h3>

<form method="get" class="d-flex flex-column">
  <div class="col col-sm-6">
  <input name="filtro" class="form-control" placeholder="Digite o pedido" value="@Model.RouteValue["Filtro"]" />
  </div>
  <div class="col my-3">
  <button type="submit" class="btn btn-dark">Procurar</button>
  </div>
</form>
<div class="my-3">
Total de Itens Cadastrados: @Model.TotalRecordCount
</div>
<p>
    <a asp-action="Create" class="btn corlaranja">Criar novo Pedido</a>
</p>

        @foreach (var item in Model)
        {
            <div class="border-bottom my-2 p-2">
             <div class="row bg-light p-2">
                <div class="row">
                <div class="col-12 col-sm-6 h4">@Html.DisplayFor(modelItem => item.Nome)
                </div>
                <div class="col-12 col-sm-6 small">
                    Data: <span class="fw-bold">@Html.DisplayFor(modelItem => item.PedidoEnviado)</span> - Envio:
                    <span class="fw-bold">@Html.DisplayFor(modelItem => item.PedidoEnviadoEm)</span> 
                </div>
                </div>
                <div clas="row">
                <div class="col fw-bold"><i class="bi bi-phone"></i> @Html.DisplayFor(modelItem => item.Telefone)</div>
                <div class="col"><i class="bi bi-envelope"> </i>@Html.DisplayFor(modelItem => item.Email)</div>
                </div>
             </div>
             <div class="row">
                <div class="col-12 mb-2 lead">
                    <i class="bi bi-house"></i> @Html.DisplayFor(modelItem => item.Endereco1), @Html.DisplayFor(modelItem => item.Endereco2),   @Html.DisplayFor(modelItem => item.Numero),  @Html.DisplayFor(modelItem => item.Bairro), @Html.DisplayFor(modelItem => item.Cidade),  @Html.DisplayFor(modelItem => item.Estado)
                </div>
                <div class="col-12 mb-2">
                   CEP: @Html.DisplayFor(modelItem => item.Cep)
                </div>
             </div>
               
            <div class="d-flex">
                    <a class="btn corlaranja" asp-action="Edit" asp-route-id="@item.PedidoId">Editar</a>&nbsp;|&nbsp;
                    <a class="btn corlaranja" asp-action="Details" asp-route-id="@item.PedidoId">Detalhar</a>&nbsp;|&nbsp;
                    <a class="btn corlaranja" asp-action="Delete" asp-route-id="@item.PedidoId">Deletar</a>&nbsp;|&nbsp;
                    <a class="btn corlaranja" asp-action="PedidoItens" asp-route-id="@item.PedidoId">Itens</a>
            </div>
                
            </div>
        }
  
<div class="my-3 align-items-center">
    <vc:pager paging-list="@Model"></vc:pager>
</div>