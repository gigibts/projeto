@model projeto.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h3 class="text-center">Editar Categoria</h3>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col col-sm-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br>
            <div class="d-flex">
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn corlaranja" /> |&nbsp;
                </div>
                <div>
                    <a class="btn corlaranja" asp-action="Index">Voltar</a>
                </div>
            </div>    

        </form>
    </div>
</div>



